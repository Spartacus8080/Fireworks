<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"

    android:orientation="horizontal"
    tools:background="@drawable/table">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/game_lives"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:drawableLeft="@drawable/ic_lives"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:textColor="@color/pastel_white"
            android:textSize="14sp"
            tools:text="3"/>

        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/game_hints"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:drawableLeft="@drawable/ic_hints"
            android:drawablePadding="4dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:textColor="@color/pastel_white"
            android:textSize="14sp"
            tools:text="2"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/board_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/game_score"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|right"
            android:drawableRight="@drawable/ic_trophy"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:textColor="@color/pastel_white"
            android:textSize="14sp"
            tools:text="25"/>


        <Space
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="0dp"/>

        <TextView
            android:id="@+id/game_cards_left"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical|right"
            android:drawableRight="@drawable/ic_cards"
            android:fontFamily="sans-serif-light"
            android:gravity="center_vertical"
            android:textColor="@color/pastel_white"
            android:textSize="14sp"
            tools:text="48"/>

    </LinearLayout>

</LinearLayout>

