<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"

    android:padding="5dp"
    android:layout_gravity="center"
    tools:background="@drawable/table">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/game_lives"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/game_lives"
            android:textColor="@color/pastel_white"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/game_hints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:text="@string/game_hints"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/pastel_white"
            android:textSize="14sp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/board_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/carbon"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/carbon"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/carbon"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/carbon"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/carbon"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

        <com.ckroetsch.hanabi.view.CardView
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical"
            android:layout_margin="5dp"
            android:background="@drawable/carbon"
            android:fontFamily="sans-serif-light"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            tools:background="@color/pastel_yellow"
            tools:text="3"/>

    </LinearLayout>

</LinearLayout>

